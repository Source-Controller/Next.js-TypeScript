{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for NextJS",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "NODE_ENV=production PORT=443 node ./.next/production-server/index.js",
    "build": "next build && tsc --project tsconfig.server.json",
    "dev": "nodemon server/index.ts",
    "prettier": "prettier  --write **/*.{ts,tsx,js,jsx}",
    "lint:ts": "npm run prettier && tslint -c tslint.json -t stylish --fix {pages/src}/**/*.{ts,tsx}",
    "lint:css": "stylelint --fix {src,pages}/**/*.css",
    "lint:types": "tsc -p . --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:types"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:ts",
      "git add"
    ],
    "*.css": [
      "npm run lint:css",
      "git add"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate"
  ],
  "author": "Sanjay Twisk",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-typescript": "^1.1.1",
    "babel-loader": "^8.0.4",
    "next": "^7.0.2",
    "next-redux-wrapper": "^2.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/jest": "^23.3.10",
    "@types/next": "^7.0.5",
    "@types/next-redux-wrapper": "^2.0.0",
    "@types/react": "^16.7.10",
    "@types/svg-sprite-loader": "^3.9.0",
    "@zeit/next-css": "^1.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "fork-ts-checker-webpack-plugin": "^0.5.0",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^8.1.0",
    "next-compose-plugins": "^2.1.1",
    "nodemon": "^1.18.7",
    "postcss-css-variables": "^0.11.0",
    "postcss-nested": "^4.1.0",
    "postcss-preset-env": "^6.4.0",
    "prettier": "^1.15.3",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "svg-sprite-loader": "^4.1.3",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0"
  }
}
